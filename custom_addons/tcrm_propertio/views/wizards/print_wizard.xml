<odoo>
    <record id="view_propertio_print_options_form" model="ir.ui.view">
        <field name="name">propertio.print.options.form</field>
        <field name="model">propertio.print.options</field>
        <field name="arch" type="xml">
            <form string="Print &amp; Export Options">
                <sheet>
                    <div class="text-center">
                        <h2>Select Format</h2>
                        <p class="text-muted">Choose how you want to export the contract for <field name="sale_id" readonly="1" options="{'no_open': True}"/></p>
                    </div>
                    <group>
                        <group>
                            <button name="action_download_pdf" string="Download PDF" type="object" class="btn-primary btn-block mb-2" icon="fa-file-pdf-o"/>
                            <button name="action_download_word" string="Download Word" type="object" class="btn-secondary btn-block mb-2" icon="fa-file-word-o"/>
                        </group>
                        <group>
                            <button name="action_print_html" string="View HTML" type="object" class="btn-info btn-block mb-2" icon="fa-html5"/>
                            <button name="action_export_word_batch" string="Batch Word Export" type="object" class="btn-secondary btn-block mb-2" icon="fa-list-alt"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_propertio_print_options" model="ir.actions.act_window">
        <field name="name">Print/Export</field>
        <field name="res_model">propertio.print.options</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

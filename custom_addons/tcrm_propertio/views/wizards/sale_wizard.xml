<odoo>
   <record id="view_propertio_sale_wizard_form" model="ir.ui.view">
        <field name="name">propertio.sale.wizard.form</field>
        <field name="model">propertio.sale.wizard</field>
        <field name="arch" type="xml">
            <form string="New Sale &amp; Payment Plan">
                <sheet>
                    <div class="oe_title">
                        <h2>New Sale Contract</h2>
                    </div>
                    <group>
                         <group>
                            <field name="partner_id"/>
                            <field name="unit_id"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="price"/>
                            <field name="list_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Terms" name="payment_terms">
                             <div class="row">
                                <div class="col-6">
                                    <group string="Down Payment">
                                        <field name="down_payment_mode" widget="radio" options="{'horizontal': true}"/>
                                        <field name="down_payment_pct" invisible="down_payment_mode == 'fixed'"/>
                                        <field name="down_payment_amount"/>
                                        <field name="date_down_payment"/>
                                    </group>
                                </div>
                                <div class="col-6">
                                    <group string="Financials">
                                        <field name="maturity_diff"/>
                                        <field name="discount_amount"/>
                                    </group>
                                </div>
                            </div>
                            <group string="Installment Plan">
                                <group>
                                    <field name="installment_count"/>
                                    <field name="start_date"/>
                                </group>
                                <group>
                                    <field name="balloon_mode" widget="radio" options="{'horizontal': true}"/>
                                    <field name="balloon_pct" invisible="balloon_mode == 'fixed'"/>
                                    <field name="balloon_amount"/>
                                    <field name="balloon_strategy"/>
                                </group>
                            </group>
                        </page>
                        <page string="Exchange Rates" name="rates">
                            <group>
                                <field name="exchange_rate_date"/>
                                <field name="tcmb_rates_html" readonly="1" nolabel="1"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <b>Note:</b> Rates are fetched from TCMB in real-time.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate_sale" string="Generate Plan &amp; Create Sale" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_propertio_sale_wizard" model="ir.actions.act_window">
        <field name="name">New Sale</field>
        <field name="res_model">propertio.sale.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tcrm_tenant_form" model="ir.ui.view">
        <field name="name">tcrm.tenant.form</field>
        <field name="model">tcrm.tenant</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="client_name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tcrm_tenant_tree" model="ir.ui.view">
        <field name="name">tcrm.tenant.tree</field>
        <field name="model">tcrm.tenant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_tcrm_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">tcrm.tenant</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tcrm_root" name="TCRM Master" groups="base.group_system"/>
    <menuitem id="menu_tcrm_tenant" name="Tenants" parent="menu_tcrm_root" action="action_tcrm_tenant"/>
</odoo>
